    {
      "action": "woocommerce/check_availability",
      "description": "Check availability for a booking product.",
      "required": [
        "product_id",
        "date"
      ],
      "optional": [
        "resource_id",
        "quantity"
      ],
      "example": {
        "action": "woocommerce/check_availability",
        "parameters": {
          "product_id": 81,
          "date": "2025-07-30",
          "resource_id": 12
        }
      }
    },
    {
      "action": "woocommerce/create_booking",
      "description": "Create a new booking.",
      "required": [
        "product_id",
        "date",
        "customer_name or customer_id"
      ],
      "optional": [
        "resource_id",
        "quantity",
        "email",
        "notes"
      ],
      "example": {
        "action": "woocommerce/create_booking",
        "parameters": {
          "product_id": 81,
          "resource_id": 12,
          "date": "2025-07-30",
          "customer_name": "John Doe"
        }
      }
    },
